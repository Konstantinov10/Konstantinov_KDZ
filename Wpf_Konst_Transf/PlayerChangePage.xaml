      xmlns:local="clr-namespace:Wpf_Konst_Transf"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="PlayerChangePage" Width="350">

    <Grid Margin="0,10,0,0">

        <DataGrid x:Name="dataGridPlayers" HorizontalAlignment="Center" Margin="21,10,22,0" VerticalAlignment="Top" Height="155" Width="307"/>
        <TextBox x:Name="textBoxPlrChange" HorizontalAlignment="Center" Height="23" Margin="45,206,55,61" TextWrapping="Wrap"  VerticalAlignment="Stretch" Width="250" RenderTransformOrigin="0.506,0.545"  />
