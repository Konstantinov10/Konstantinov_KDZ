<Page x:Class="Wpf_Konst_Transf.PlayerChangePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf_Konst_Transf"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="PlayerChangePage" Width="400">

    <Grid Margin="0,10,0,0">
       
        <DataGrid x:Name="dataGridPlayers" HorizontalAlignment="Left" Margin="28,10,0,0" VerticalAlignment="Top" Height="155" Width="346"/>
        <TextBox x:Name="textBoxPlrChange" HorizontalAlignment="Left" Height="23" Margin="28,206,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="154"  />
        <Label x:Name="label" Content="Please, write your name:" HorizontalAlignment="Left" Margin="130,170,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonSaveChange" Content="Save" HorizontalAlignment="Left" Margin="296,239,0,0" VerticalAlignment="Top" Width="78" Click="buttonSaveChange_Click" Height="26"/>
        <Button x:Name="ButtonShow" Content="Search" HorizontalAlignment="Left" Margin="189,206,0,0" VerticalAlignment="Top" Width="79" Click="ButtonShow_Click" Height="23"/>
    </Grid>
</Page>
