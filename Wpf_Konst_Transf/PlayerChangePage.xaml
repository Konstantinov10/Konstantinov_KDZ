        <Button x:Name="buttonSaveChange" Content="Save" HorizontalAlignment="Right" Margin="0,0,35,20" VerticalAlignment="Bottom" Width="78" Click="buttonSaveChange_Click" Height="26"/>
        <Button x:Name="ButtonShow" Content="Search" HorizontalAlignment="Center" Margin="216,206,55,61" VerticalAlignment="Stretch" Width="79" Click="ButtonShow_Click" Height="23"/>
    </Grid>
</Page>
