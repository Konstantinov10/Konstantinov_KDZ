<Window x:Class="Wpf_Konst_Transf.PlayerChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Konst_Transf"
        mc:Ignorable="d"
        Title="PlayerChangeWindow" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="dataGridPlayers" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="155" Width="272"/>
        <TextBox x:Name="textBoxPlrChange" HorizontalAlignment="Left" Height="23" Margin="10,206,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="154" TextChanged="textBoxPlrChange_TextChanged"/>
        <Label x:Name="label" Content="Please, write your name:" HorizontalAlignment="Left" Margin="78,170,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonSaveChange" Content="Save" HorizontalAlignment="Left" Margin="10,239,0,0" VerticalAlignment="Top" Width="75" Click="buttonSaveChange_Click"/>

    </Grid>
</Window>
